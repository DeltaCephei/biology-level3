---
/**
 * BaseLayout.astro — Main layout wrapper for all pages.
 *
 * Provides the HTML shell, sticky header with navigation,
 * theme toggle (dark/light), footer, and global stylesheet imports.
 * Every page on the site should use this layout.
 */

import { ViewTransitions } from 'astro:transitions';

/* Global stylesheets — imported here so Astro bundles them at build time */
import '../styles/global.css';
import '../styles/theme.css';
import '../styles/animations.css';

interface Props {
  title?: string;
  description?: string;
}

const {
  title = 'Level 3 Biology — Pursue Learning',
  description = 'Week-by-week Level 3 NCEA Biology course companion',
} = Astro.props;

/* Base URL for prefixing internal links (includes trailing slash) */
const base = import.meta.env.BASE_URL;

/* Strip the base prefix so active-link detection uses simple paths like '/' */
const currentPath = Astro.url.pathname.replace(base.replace(/\/$/, ''), '') || '/';
---

<!doctype html>
<html lang="en-NZ" data-theme="dark">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>{title}</title>
    <meta name="description" content={description} />

    <!-- Open Graph -->
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta property="og:type" content="website" />

    <!-- Favicons -->
    <link rel="icon" type="image/svg+xml" href={`${base}/favicon.svg`} />
    <link rel="icon" href={`${base}/favicon.ico`} />

    <!-- Google Fonts — Space Grotesk (display) + Inter (body) -->
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&family=Space+Grotesk:wght@500;600;700&display=swap"
      rel="stylesheet"
    />

    <!-- Firebase SDK (compat) -->
    <script is:inline src="https://www.gstatic.com/firebasejs/10.14.1/firebase-app-compat.js"></script>
    <script is:inline src="https://www.gstatic.com/firebasejs/10.14.1/firebase-auth-compat.js"></script>
    <script is:inline src="https://www.gstatic.com/firebasejs/10.14.1/firebase-firestore-compat.js"></script>
    <script is:inline src="/firebase-config.js"></script>

    <!-- Astro View Transitions for smooth page navigation -->
    <ViewTransitions />
  </head>

  <body>
    <!-- ============================
         Sticky site header + nav
         ============================ -->
    <header class="site-header">
      <div class="header-inner">
        <!-- Site title / logo (display font) -->
        <a href={base} class="site-title" transition:persist>
          <span class="title-accent">Dr Eliot's</span> Level 3 Biology
        </a>

        <!-- Primary navigation -->
        <nav class="site-nav" aria-label="Primary navigation">
          <a href={base} class:list={['nav-link', { active: currentPath === '/' }]}>
            Home
          </a>
          <a
            href={`${base}/standards`}
            class:list={['nav-link', { active: currentPath.startsWith('/standards') }]}
          >
            Standards
          </a>
          <a
            href={`${base}/experiments`}
            class:list={['nav-link', { active: currentPath.startsWith('/experiments') }]}
          >
            Experiments
          </a>
          <a
            href={`${base}/flashcards`}
            class:list={['nav-link', { active: currentPath.startsWith('/flashcards') }]}
          >
            Flashcards
          </a>
          <a
            href={`${base}/quiz`}
            class:list={['nav-link', { active: currentPath.startsWith('/quiz') }]}
          >
            Quiz
          </a>
          <a
            href={`${base}/braindump`}
            class:list={['nav-link', { active: currentPath.startsWith('/braindump') }]}
          >
            Brain Dump
          </a>
          <a
            href={`${base}/progress`}
            class:list={['nav-link', { active: currentPath.startsWith('/progress') }]}
          >
            Progress
          </a>
          <a
            href={`${base}/dashboard`}
            class:list={['nav-link nav-link--teacher', { active: currentPath.startsWith('/dashboard') }]}
            id="nav-dashboard"
            style="display: none;"
          >
            Dashboard
          </a>
        </nav>

        <!-- Auth status (avatar + sign out) -->
        <div class="auth-status" id="auth-status" style="display: none;" transition:persist>
          <img class="auth-avatar" id="auth-avatar" alt="" width="28" height="28" />
          <button class="auth-signout" id="auth-signout" type="button" aria-label="Sign out" title="Sign out">
            <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
              <path d="M9 21H5a2 2 0 0 1-2-2V5a2 2 0 0 1 2-2h4"></path>
              <polyline points="16 17 21 12 16 7"></polyline>
              <line x1="21" y1="12" x2="9" y2="12"></line>
            </svg>
          </button>
        </div>

        <!-- Theme toggle (sun/moon) — transition:persist keeps the same
             DOM element (and its click handler) across View Transitions -->
        <button
          class="theme-toggle"
          id="theme-toggle"
          type="button"
          aria-label="Toggle colour theme"
          title="Toggle colour theme"
          transition:persist
        >
          <!-- Sun icon (shown in dark mode — click to switch to light) -->
          <svg
            class="icon-sun"
            xmlns="http://www.w3.org/2000/svg"
            width="20"
            height="20"
            viewBox="0 0 24 24"
            fill="none"
            stroke="currentColor"
            stroke-width="2"
            stroke-linecap="round"
            stroke-linejoin="round"
          >
            <circle cx="12" cy="12" r="5"></circle>
            <line x1="12" y1="1" x2="12" y2="3"></line>
            <line x1="12" y1="21" x2="12" y2="23"></line>
            <line x1="4.22" y1="4.22" x2="5.64" y2="5.64"></line>
            <line x1="18.36" y1="18.36" x2="19.78" y2="19.78"></line>
            <line x1="1" y1="12" x2="3" y2="12"></line>
            <line x1="21" y1="12" x2="23" y2="12"></line>
            <line x1="4.22" y1="19.78" x2="5.64" y2="18.36"></line>
            <line x1="18.36" y1="5.64" x2="19.78" y2="4.22"></line>
          </svg>
          <!-- Moon icon (shown in light mode — click to switch to dark) -->
          <svg
            class="icon-moon"
            xmlns="http://www.w3.org/2000/svg"
            width="20"
            height="20"
            viewBox="0 0 24 24"
            fill="none"
            stroke="currentColor"
            stroke-width="2"
            stroke-linecap="round"
            stroke-linejoin="round"
          >
            <path d="M21 12.79A9 9 0 1 1 11.21 3 7 7 0 0 0 21 12.79z"></path>
          </svg>
        </button>
      </div>
    </header>

    <!-- ============================
         Page content slot
         ============================ -->
    <main class="site-main">
      <slot />
    </main>

    <!-- ============================
         Footer
         ============================ -->
    <footer class="site-footer">
      <p class="footer-brand">&copy; Pursue Learning Limited 2026</p>
      <p class="footer-tagline">Built for NCEA Level 3 Biology</p>
    </footer>

    <!-- ============================
         Theme toggle + active nav
         ============================ -->
    <!--
      Theme toggle — two scripts for robustness:
      1. is:inline re-runs every navigation: applies stored theme + attaches
         click handler (guarded so the persisted button doesn't get duplicates)
      2. Non-inline runs once: registers astro:after-swap to re-apply theme
         to the fresh <html> element before paint
    -->
    <script is:inline>
      /* Apply stored theme immediately to prevent flash */
      (function () {
        var stored = localStorage.getItem('bio-theme');
        if (stored === 'light' || stored === 'dark') {
          document.documentElement.setAttribute('data-theme', stored);
        }
      })();

      /* Attach click handler — guard prevents duplicates on persisted button */
      (function () {
        var toggle = document.getElementById('theme-toggle');
        if (toggle && !toggle._themeInit) {
          toggle._themeInit = true;
          toggle.addEventListener('click', function () {
            var root = document.documentElement;
            var current = root.getAttribute('data-theme') || 'dark';
            var next = current === 'dark' ? 'light' : 'dark';
            root.setAttribute('data-theme', next);
            localStorage.setItem('bio-theme', next);
          });
        }
      })();
    </script>

    <script>
      /* Re-apply stored theme after View Transition swap (before paint) */
      document.addEventListener('astro:after-swap', () => {
        const stored = localStorage.getItem('bio-theme');
        if (stored === 'light' || stored === 'dark') {
          document.documentElement.setAttribute('data-theme', stored);
        }
      });
    </script>

    <!-- Firebase init + auth utilities -->
    <script is:inline>
      /* Firebase init — guarded to prevent re-init across ViewTransitions */
      (function () {
        if (!window._bioFirebaseApp && window.FIREBASE_CONFIG) {
          window._bioFirebaseApp = firebase.initializeApp(window.FIREBASE_CONFIG);
          window._bioAuth = firebase.auth();
          window._bioDb = firebase.firestore();
        }
      })();

      /* Teacher email for dashboard access */
      window._bioTeacherEmail = 'deornorth@gmail.com';

      /* Update auth UI elements */
      function _bioUpdateAuthUI(user) {
        var status = document.getElementById('auth-status');
        var avatar = document.getElementById('auth-avatar');
        var signout = document.getElementById('auth-signout');
        var dashLink = document.getElementById('nav-dashboard');

        if (user) {
          if (status) status.style.display = 'flex';
          if (avatar && user.photoURL) {
            avatar.src = user.photoURL;
            avatar.alt = user.displayName || '';
          }
          if (dashLink && user.email === window._bioTeacherEmail) {
            dashLink.style.display = '';
          }
        } else {
          if (status) status.style.display = 'none';
          if (dashLink) dashLink.style.display = 'none';
        }
      }

      /* Sign-out handler — guarded for persist */
      (function () {
        var btn = document.getElementById('auth-signout');
        if (btn && !btn._authInit) {
          btn._authInit = true;
          btn.addEventListener('click', function () {
            if (window._bioAuth) {
              window._bioAuth.signOut().then(function () {
                window.location.href = '/login';
              });
            }
          });
        }
      })();

      /* Auth state listener — update UI on auth change */
      if (window._bioAuth && !window._bioAuthListenerSet) {
        window._bioAuthListenerSet = true;
        window._bioAuth.onAuthStateChanged(function (user) {
          window._bioCurrentUser = user;
          _bioUpdateAuthUI(user);
        });
      }

      /* Update UI immediately if user already resolved */
      if (window._bioCurrentUser) {
        _bioUpdateAuthUI(window._bioCurrentUser);
      }

      /**
       * Auth gate — call from protected pages.
       * Waits for auth state, redirects to /login if not signed in.
       * Calls callback(user) when authenticated.
       */
      window.bioRequireAuth = function (callback) {
        if (!window._bioAuth) {
          window.location.href = '/login?redirect=' + encodeURIComponent(window.location.pathname + window.location.search);
          return;
        }

        /* If user already resolved, use it immediately */
        if (window._bioCurrentUser !== undefined && window._bioCurrentUser !== null) {
          window._bioDb.collection('biology_students').doc(window._bioCurrentUser.uid).set({
            lastActive: firebase.firestore.FieldValue.serverTimestamp()
          }, { merge: true });
          callback(window._bioCurrentUser);
          return;
        }

        /* Otherwise wait for the auth state listener */
        var unsubscribe = window._bioAuth.onAuthStateChanged(function (user) {
          unsubscribe();
          if (!user) {
            window.location.href = '/login?redirect=' + encodeURIComponent(window.location.pathname + window.location.search);
          } else {
            window._bioDb.collection('biology_students').doc(user.uid).set({
              lastActive: firebase.firestore.FieldValue.serverTimestamp()
            }, { merge: true });
            callback(user);
          }
        });
      };
    </script>

    <script>
      /* Re-update auth UI after ViewTransition swap */
      document.addEventListener('astro:after-swap', () => {
        if (window._bioCurrentUser) {
          // @ts-ignore
          _bioUpdateAuthUI(window._bioCurrentUser);
        }
      });
    </script>
  </body>
</html>

<style>
  /* =============================================
     Header — sticky, translucent, with blur
     ============================================= */
  .site-header {
    position: sticky;
    top: 0;
    z-index: 100;
    background: var(--surface-1, rgba(15, 23, 42, 0.85));
    backdrop-filter: blur(12px);
    -webkit-backdrop-filter: blur(12px);
    border-bottom: 1px solid var(--surface-2, rgba(255, 255, 255, 0.06));
  }

  .header-inner {
    display: flex;
    align-items: center;
    justify-content: space-between;
    max-width: 1200px;
    margin: 0 auto;
    padding: 0.75rem 1.5rem;
  }

  /* Site title / logo */
  .site-title {
    font-family: 'Space Grotesk', sans-serif;
    font-weight: 700;
    font-size: 1.25rem;
    color: var(--text-primary, #f1f5f9);
    text-decoration: none;
    letter-spacing: -0.02em;
    transition: opacity 0.2s ease;
  }

  .site-title:hover {
    opacity: 0.85;
  }

  .title-accent {
    color: var(--accent-green, #4ade80);
  }

  /* Navigation — horizontal flex */
  .site-nav {
    display: flex;
    align-items: center;
    gap: 1.75rem;
  }

  .nav-link {
    font-family: 'Inter', sans-serif;
    font-weight: 500;
    font-size: 0.9rem;
    color: var(--text-secondary, #94a3b8);
    text-decoration: none;
    position: relative;
    padding: 0.25rem 0;
    transition: color 0.25s ease;
  }

  .nav-link:hover {
    color: var(--text-primary, #f1f5f9);
  }

  /* Active state — accent green with underline indicator */
  .nav-link.active {
    color: var(--accent-green, #4ade80);
  }

  .nav-link.active::after {
    content: '';
    position: absolute;
    bottom: -4px;
    left: 0;
    right: 0;
    height: 2px;
    background: var(--accent-green, #4ade80);
    border-radius: 1px;
  }

  /* Auth status */
  .auth-status {
    display: flex;
    align-items: center;
    gap: 0.5rem;
  }

  .auth-avatar {
    width: 28px;
    height: 28px;
    border-radius: 50%;
    border: 2px solid var(--accent-green, #4ade80);
    object-fit: cover;
  }

  .auth-signout {
    display: flex;
    align-items: center;
    justify-content: center;
    width: 32px;
    height: 32px;
    padding: 0;
    background: none;
    border: none;
    border-radius: 6px;
    color: var(--text-muted, #64748b);
    cursor: pointer;
    transition: color 0.2s ease, background 0.2s ease;
  }

  .auth-signout:hover {
    color: var(--error, #ff5252);
    background: var(--surface-2, rgba(255, 255, 255, 0.06));
  }

  /* Teacher-only nav link */
  .nav-link--teacher {
    color: var(--purple-deep, #a78bfa);
  }

  .nav-link--teacher.active {
    color: var(--purple-deep, #a78bfa);
  }

  .nav-link--teacher.active::after {
    background: var(--purple-deep, #a78bfa);
  }

  /* Theme toggle button */
  .theme-toggle {
    display: flex;
    align-items: center;
    justify-content: center;
    width: 36px;
    height: 36px;
    padding: 0;
    background: none;
    border: none;
    border-radius: 8px;
    color: var(--text-secondary, #94a3b8);
    cursor: pointer;
    transition: color 0.25s ease, background 0.25s ease;
  }

  .theme-toggle:hover {
    color: var(--text-primary, #f1f5f9);
    background: var(--surface-2, rgba(255, 255, 255, 0.06));
  }

  /*
   * Icon visibility — show sun in dark mode, moon in light mode.
   * The :global() wrapper targets the html[data-theme] attribute
   * which lives outside this component's scoped styles.
   */
  :global([data-theme='dark']) .icon-sun {
    display: block;
  }
  :global([data-theme='dark']) .icon-moon {
    display: none;
  }
  :global([data-theme='light']) .icon-sun {
    display: none;
  }
  :global([data-theme='light']) .icon-moon {
    display: block;
  }

  /* =============================================
     Main content area
     ============================================= */
  .site-main {
    min-height: calc(100vh - 140px); /* Push footer down */
    max-width: 1200px;
    margin: 0 auto;
    padding: 2rem 1.5rem;
  }

  /* =============================================
     Footer — centred, muted, top border
     ============================================= */
  .site-footer {
    text-align: center;
    padding: 1.5rem 1rem;
    border-top: 1px solid var(--surface-2, rgba(255, 255, 255, 0.06));
    color: var(--text-muted, #64748b);
    font-family: 'Inter', sans-serif;
    font-size: 0.8rem;
    line-height: 1.6;
  }

  .footer-brand {
    margin: 0;
  }

  .footer-tagline {
    margin: 0.25rem 0 0;
    opacity: 0.7;
  }
</style>
