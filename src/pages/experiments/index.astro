---
/**
 * Experiments Hub — Grid of interactive experiment simulations.
 * Features the Choice Chamber simulator and Taxis vs Kinesis comparison;
 * more experiments will be added over time.
 */
import BaseLayout from '../../layouts/BaseLayout.astro';
const base = import.meta.env.BASE_URL;
---

<BaseLayout
  title="Experiments — Level 3 Biology"
  description="Interactive experiment simulations for NCEA Level 3 Biology"
>
  <div class="experiments-page">

    <!-- Page header -->
    <header class="page-header">
      <a href={base} class="back-link">← Back to Dashboard</a>
      <h1 class="page-title">Experiments</h1>
      <p class="page-desc">
        Interactive simulations that let you run virtual versions of real biology practicals.
        Set up conditions, observe behaviour, and analyse your results.
      </p>
    </header>

    <!-- Experiment cards grid -->
    <div class="experiments-grid">

      <!-- Choice Chamber -->
      <a href={`${base}/experiments/choice-chamber`} class="experiment-card fade-in-up">
        <div class="experiment-card__icon">
          {/* Simple 2×2 chamber icon */}
          <svg width="48" height="48" viewBox="0 0 48 48" fill="none" aria-hidden="true">
            <rect x="4" y="4" width="40" height="40" rx="6" stroke="currentColor" stroke-width="2"/>
            <line x1="24" y1="4" x2="24" y2="44" stroke="currentColor" stroke-width="2"/>
            <line x1="4" y1="24" x2="44" y2="24" stroke="currentColor" stroke-width="2"/>
            <circle cx="24" cy="24" r="4" fill="currentColor" opacity="0.3"/>
            {/* Small dots representing organisms */}
            <circle cx="12" cy="14" r="2" fill="currentColor" opacity="0.5"/>
            <circle cx="16" cy="18" r="2" fill="currentColor" opacity="0.5"/>
            <circle cx="10" cy="34" r="2" fill="currentColor" opacity="0.5"/>
            <circle cx="14" cy="38" r="2" fill="currentColor" opacity="0.5"/>
            <circle cx="11" cy="36" r="2" fill="currentColor" opacity="0.5"/>
          </svg>
        </div>
        <div class="experiment-card__content">
          <h2 class="experiment-card__title">Choice Chamber</h2>
          <p class="experiment-card__desc">
            Run a virtual choice chamber experiment. Choose an organism, configure light and
            moisture conditions, watch real-time movement, and record your data.
          </p>
          <div class="experiment-card__meta">
            <span class="badge badge--standard">AS 91603</span>
            <span class="badge badge--topic">Taxis &amp; Kinesis</span>
          </div>
        </div>
        <span class="experiment-card__arrow" aria-hidden="true">→</span>
      </a>

      <!-- Taxis vs Kinesis -->
      <a href={`${base}/experiments/taxis-vs-kinesis`} class="experiment-card fade-in-up">
        <div class="experiment-card__icon">
          {/* Side-by-side comparison icon — two panels with different movement patterns */}
          <svg width="48" height="48" viewBox="0 0 48 48" fill="none" aria-hidden="true">
            <rect x="4" y="4" width="18" height="40" rx="3" stroke="currentColor" stroke-width="2"/>
            <rect x="26" y="4" width="18" height="40" rx="3" stroke="currentColor" stroke-width="2"/>
            {/* Kinesis — random zigzag path */}
            <path d="M9 34 L11 28 L8 24 L14 20 L10 16 L13 12" stroke="currentColor" stroke-width="1.5" fill="none" opacity="0.5"/>
            <circle cx="13" cy="12" r="2" fill="currentColor" opacity="0.5"/>
            {/* Taxis — straight arrow toward target */}
            <line x1="30" y1="34" x2="38" y2="14" stroke="currentColor" stroke-width="1.5" opacity="0.5"/>
            <circle cx="38" cy="14" r="2" fill="currentColor" opacity="0.5"/>
            <circle cx="40" cy="10" r="3" fill="currentColor" opacity="0.2"/>
          </svg>
        </div>
        <div class="experiment-card__content">
          <h2 class="experiment-card__title">Taxis vs Kinesis</h2>
          <p class="experiment-card__desc">
            Side-by-side comparison of directional (taxis) and non-directional (kinesis) behaviour.
            Watch slaters and pūriri moths respond to stimuli in fundamentally different ways.
          </p>
          <div class="experiment-card__meta">
            <span class="badge badge--standard">AS 91603</span>
            <span class="badge badge--topic">Orientation Behaviour</span>
          </div>
        </div>
        <span class="experiment-card__arrow" aria-hidden="true">→</span>
      </a>

      <!-- Placeholder for future experiments -->
      <div class="experiment-card experiment-card--coming-soon fade-in-up">
        <div class="experiment-card__icon">
          <svg width="48" height="48" viewBox="0 0 48 48" fill="none" aria-hidden="true">
            <rect x="4" y="4" width="40" height="40" rx="6" stroke="currentColor" stroke-width="2" stroke-dasharray="4 4"/>
            <text x="24" y="28" text-anchor="middle" font-size="18" fill="currentColor" opacity="0.4">+</text>
          </svg>
        </div>
        <div class="experiment-card__content">
          <h2 class="experiment-card__title">More Coming Soon</h2>
          <p class="experiment-card__desc">
            Additional experiment simulations will be added as the course progresses.
          </p>
        </div>
      </div>

    </div>
  </div>
</BaseLayout>


<style>
  .experiments-page {
    max-width: 900px;
    margin: 0 auto;
  }

  /* Page header */
  .page-header {
    margin-bottom: var(--space-6);
    padding-bottom: var(--space-6);
    border-bottom: 1px solid var(--border-subtle);
  }

  .back-link {
    display: inline-flex;
    align-items: center;
    gap: var(--space-2);
    font-size: var(--text-sm);
    color: var(--text-secondary);
    text-decoration: none;
    margin-bottom: var(--space-4);
    transition: color var(--transition-fast);
  }

  .back-link:hover {
    color: var(--accent);
  }

  .page-title {
    font-size: clamp(var(--text-2xl), 4vw, var(--text-4xl));
    font-weight: var(--weight-bold);
    line-height: var(--leading-tight);
    margin-bottom: var(--space-3);
  }

  .page-desc {
    font-size: var(--text-base);
    color: var(--text-secondary);
    line-height: var(--leading-relaxed);
    max-width: 640px;
  }

  /* Experiments grid */
  .experiments-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(340px, 1fr));
    gap: var(--space-4);
  }

  /* Experiment card */
  .experiment-card {
    display: flex;
    align-items: flex-start;
    gap: var(--space-4);
    padding: var(--space-5);
    background: var(--surface-1);
    border: 1px solid var(--border-subtle);
    border-radius: var(--radius-lg);
    text-decoration: none;
    color: inherit;
    transition:
      transform var(--transition-base),
      box-shadow var(--transition-base),
      border-color var(--transition-base);
  }

  a.experiment-card:hover {
    transform: translateY(-3px);
    box-shadow: var(--shadow-lg);
    border-color: var(--accent);
  }

  .experiment-card--coming-soon {
    opacity: 0.5;
    border-style: dashed;
  }

  .experiment-card__icon {
    flex-shrink: 0;
    color: var(--accent);
  }

  .experiment-card__content {
    flex: 1;
    min-width: 0;
  }

  .experiment-card__title {
    font-family: var(--font-display);
    font-size: var(--text-lg);
    font-weight: var(--weight-semibold);
    color: var(--text-primary);
    margin-bottom: var(--space-2);
  }

  .experiment-card__desc {
    font-size: var(--text-sm);
    color: var(--text-secondary);
    line-height: var(--leading-relaxed);
    margin-bottom: var(--space-3);
  }

  .experiment-card__meta {
    display: flex;
    flex-wrap: wrap;
    gap: var(--space-2);
  }

  .badge {
    display: inline-flex;
    align-items: center;
    padding: var(--space-1) var(--space-3);
    font-size: var(--text-xs);
    font-weight: var(--weight-semibold);
    font-family: var(--font-display);
    border-radius: var(--radius-full);
    line-height: 1;
    white-space: nowrap;
  }

  .badge--standard {
    background: rgba(0, 255, 136, 0.1);
    color: var(--accent);
  }

  .badge--topic {
    background: rgba(125, 249, 255, 0.1);
    color: var(--fluoro-cyan, #7df9ff);
  }

  .experiment-card__arrow {
    flex-shrink: 0;
    font-size: var(--text-xl);
    color: var(--text-muted);
    transition: transform var(--transition-fast), color var(--transition-fast);
    margin-top: var(--space-1);
  }

  a.experiment-card:hover .experiment-card__arrow {
    transform: translateX(4px);
    color: var(--accent);
  }

  /* Fade-in animation */
  .fade-in-up {
    opacity: 0;
    transform: translateY(24px);
    transition:
      opacity 0.6s cubic-bezier(0.23, 1, 0.32, 1),
      transform 0.6s cubic-bezier(0.23, 1, 0.32, 1);
  }

  .fade-in-up.is-visible {
    opacity: 1;
    transform: translateY(0);
  }

  /* Stagger */
  .experiments-grid .fade-in-up:nth-child(1) { transition-delay: 0.05s; }
  .experiments-grid .fade-in-up:nth-child(2) { transition-delay: 0.10s; }
  .experiments-grid .fade-in-up:nth-child(3) { transition-delay: 0.15s; }

  @media (max-width: 560px) {
    .experiments-grid {
      grid-template-columns: 1fr;
    }
    .experiment-card {
      flex-direction: column;
    }
  }
</style>


<script>
  /* IntersectionObserver — triggers .fade-in-up animations on viewport entry */
  const observer = new IntersectionObserver(
    (entries) => {
      entries.forEach((entry) => {
        if (entry.isIntersecting) {
          entry.target.classList.add('is-visible');
          observer.unobserve(entry.target);
        }
      });
    },
    { threshold: 0.08, rootMargin: '0px 0px -40px 0px' }
  );
  document.querySelectorAll('.fade-in-up').forEach((el) => observer.observe(el));
</script>
