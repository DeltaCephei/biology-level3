---
/* ==========================================================================
   Progress — Coming Soon placeholder
   ========================================================================== */

import BaseLayout from '../layouts/BaseLayout.astro';
const base = import.meta.env.BASE_URL.replace(/\/$/, '');
---

<BaseLayout title="Progress — Dr Eliot's Level 3 Biology">
  <section class="coming-soon">
    <div class="coming-soon__icon" aria-hidden="true">
      <svg width="64" height="64" viewBox="0 0 64 64" fill="none">
        <rect x="12" y="36" width="8" height="16" rx="2" fill="var(--purple-deep)" opacity="0.4" />
        <rect x="24" y="28" width="8" height="24" rx="2" fill="var(--purple-deep)" opacity="0.6" />
        <rect x="36" y="20" width="8" height="32" rx="2" fill="var(--purple-deep)" opacity="0.8" />
        <rect x="48" y="12" width="8" height="40" rx="2" fill="var(--purple-deep)" />
      </svg>
    </div>
    <h1>Progress</h1>
    <p>Track your study streak, mastery breakdown, and revision history — coming soon.</p>
    <a href={base || "/"} class="coming-soon__link">
      <svg width="16" height="16" viewBox="0 0 16 16" fill="none" aria-hidden="true">
        <path d="M13 8H3M7 4L3 8l4 4" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round"/>
      </svg>
      Back to Home
    </a>
  </section>
</BaseLayout>

<style>
  .coming-soon {
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    text-align: center;
    min-height: 50vh;
    gap: 1rem;
  }

  .coming-soon__icon {
    opacity: 0.6;
    margin-bottom: 0.5rem;
  }

  .coming-soon h1 {
    font-family: var(--font-display);
    font-size: var(--text-3xl);
    color: var(--text-primary);
  }

  .coming-soon p {
    color: var(--text-secondary);
    font-size: var(--text-lg);
    max-width: 28rem;
  }

  .coming-soon__link {
    display: inline-flex;
    align-items: center;
    gap: 0.5rem;
    margin-top: 1rem;
    padding: 0.6rem 1.2rem;
    background: var(--surface-2);
    border: 1px solid var(--border-subtle);
    border-radius: var(--radius-md);
    color: var(--text-secondary);
    font-weight: 500;
    text-decoration: none;
    transition: color 0.2s ease, border-color 0.2s ease;
  }

  .coming-soon__link:hover {
    color: var(--text-primary);
    border-color: var(--border-default);
  }
</style>

