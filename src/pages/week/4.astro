  (function dategate() {
    /* Today's date in NZ, as YYYY-MM-DD string for simple comparison */
    const nzDate = new Date().toLocaleDateString('en-CA', { timeZone: 'Pacific/Auckland' });

    document.querySelectorAll('[data-release]').forEach((section) => {
